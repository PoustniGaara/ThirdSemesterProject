@model WebAppMVC.ViewModels.UserDetailsVM


<h1 class="account-title">@Html.DisplayFor(model => model.PageTitle)</h1>


<div class="acount-info">
    <div class="acount-info-child">
        <dl class="row">
            <dt class="col-sm-2">
                Profile
            </dt>
            <dd></dd>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name) @Html.DisplayFor(model => model.Surname)
            </dd>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
        </dl>
    </div>
    <div class="acount-info-child">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd></dd>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </dd>
        </dl>
    </div>
    <div class="acount-info-child">
        <div class="questions-box">
            <p>Questions?</p>
            <p>
                <a class="a-link" href="mailto:ucnwebshop@@gmail.com">
                    customerservice.dk@@ucn.com
                </a>
            </p>
        </div>
    </div>

</div>
<div>
    <a class="a-link" href='@Url.Action("Edit","User",new { Model.Email })'> Edit Account</a>
</div>

<hr />
<h3 class="account-title">Order history</h3>
@*If there are no orders*@
@if(Model.Orders.Count() < 1){
    <p class="p-center">You don't have any orders.</p>
}
@*If there are orders*@
else{
    <div class="orders-section-row">
        <div class="scrollable-table">
            <table>
                <thead>
                    <tr>
                        <th>DATE</th>
                        <th>ORDER ID</th>
                        <th>COST</th>
                        <th>STATUS</th>
                        <th>ACTION</th>
                    </tr>
                </thead>
                <tbody>
                    
                        @foreach (var order in Model.Orders)
                        {
                        <tr>
                            <td>@order.Date.ToString("dd/MM/yyyy")</td>
                            <td>@order.Id</td>
                            <td>@order.TotalPrice</td>
                            <td>@order.Status</td>
                            <td><a href="@Url.Action("Details", "Order", new {order.Id})" class="a-link">View details</a></td>
                        </tr>
                        }
                    
                </tbody>
            </table>
        </div>
    </div>
    
}

