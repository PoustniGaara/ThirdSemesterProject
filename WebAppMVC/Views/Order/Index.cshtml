@*@model IEnumerable<WebApiClient.DTOs.OrderDto>
*@
@model WebAppMVC.ViewModels.OrderIndexVM;

<h2>Your Orders</h2>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                Order nr.
            </th>
            <th>
                Date
            </th>
            <th>
                Total
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders) {
            <tr>
                <td>
                        @Html.ActionLink(order.Id.ToString(), "Details", new { id = order.Id }) 
                </td>
                <td>
                        @Html.DisplayFor(modelItem => order.Date)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => order.TotalPrice) Kr
                </td>
            </tr>
        }
    </tbody>
</table>
