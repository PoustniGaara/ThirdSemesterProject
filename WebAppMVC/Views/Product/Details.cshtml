        </dd>
    </dl>
    @foreach (var size in Model.SizesStock.Keys)
    {
        <ul>
            <li>@Html.DisplayFor(model => model.SizesStock.Keys)</li>
        </ul>
    }
    <form action="https://formsreceiver.codesamples.dk/" method="post" enctype="application/x-www-form-urlencoded" name="dj_application_form">
        @Html.ActionLink("Add to Cart", "Add", new {})
