    </form><input type="submit" value="submit form"/>
    
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>


<script>
    var hiddenSelectedSizeField = document.querySelector("form[name='size_selection'] input[name='selected_size']");
    var sizes = document.querySelectorAll(".sizes");
    for (const size of sizes) {
        size.addEventListener('click',
            function sizeClicked(event) {
                unselectSizes();
                this.classList.toggle("selected");
                hiddenSelectedSizeField.value = this.querySelector("span.sizeName").innerText;
            });
    }

    function unselectSizes() {
        for (const selectedSizes of sizes) {
            selectedSizes.classList.remove("selected");
        }
    }

</script>
